{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "dev-base",
            "hidden": true,
            "binaryDir": "${sourceDir}/.build/${presetName}-${hostSystemName}",
            "installDir": "${sourceDir}/.install/${presetName}-${hostSystemName}",
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "dev-debug",
            "displayName": "Development Debug (${hostSystemName})",
            "inherits": "dev-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "dev-release",
            "displayName": "Development Release (${hostSystemName})",
            "inherits": "dev-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "dev-debug",
            "configurePreset": "dev-debug"
        },
        {
            "name": "dev-release",
            "configurePreset": "dev-release"
        }
    ]
}